/* pages/doctor/doctor.wxss */
.doctor{
    padding: 30rpx;
}
.self{
    position: relative;
    width: 238rpx;
    margin-right: 20rpx;
}
.self image{
    width: 220rpx;
    height: 220rpx;
    border-radius: 50%;
    margin-top: 18rpx;
}
.gz{
    position: absolute;
    top: 235rpx;
    width: 106rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    left: 50%;
    margin-left: -53rpx;
    background-color: #d2fbff;
    border-radius: 23.5rpx;
    border: solid 1px #1cdaea;
    font-size: 28rpx;
    letter-spacing: -0.6rpx;
    color: #00ccdd;
}
.top{
    display: flex;
}
.name{
    font-size: 40rpx;
    line-height: 70rpx;
    letter-spacing: -0.8rpx;
    color: #00ccdd;
    font-weight: 600;
    margin-right: 20rpx;
}
.rz{
    font-size: 32rpx;
    line-height: 70rpx;
    letter-spacing: -0.6rpx;
    color: #555555;
}
.js{
    font-size: 24rpx;
    line-height: 38rpx;
    letter-spacing: -0.5rpx;
    color: #888888;
    text-indent: 2em;
}
.panel{
    padding: 26rpx;
    background-color: #ffffff;
    box-shadow: 0px 0px 18px 0px rgba(3, 0, 0, 0.07);
    border-radius: 8px;
    margin-bottom: 22rpx;
}
.star{
    width: 18rpx;
    height: 18rpx;
    margin-right: 11rpx;
}
.panel-txt{
    vertical-align: middle;
    display: inline-block;
    font-size: 24rpx;
    line-height: 28rpx;
    letter-spacing: -0.5rpx;
    color: #444444;
}
.panel-textSty{
    font-size: 24rpx;
    line-height: 42rpx;
    letter-spacing: -0.5rpx;
    color: #444444;
}
/*预约挂号*/
.btn-wrap{
    margin: 27rpx 0 19rpx 0;
    width: 100%;
    height: 106rpx;
    background-color: #ffb400;
    box-shadow: 0rpx 0rpx 18rpx 0rpx rgba(3, 0, 0, 0.07);
    border-radius: 8rpx;
    line-height: 72rpx;
    display: flex;
    color: white;
    align-items: center;
    justify-content: center;
}
.btn-wrap text{
    font-size: 50rpx;
}
.btn-wrap image{
    width: 69rpx;
    height: 67rpx;
    margin-right: 44rpx;
}