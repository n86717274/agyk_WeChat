<!--pages/register/register.wxml-->
<view class="login container">
  <view class="banner-wrap">
    <image class="banner" src="../../assets/imgs/login/bg.png"></image>
    <view class="bannerTxt-wp">
      <view class="banner-txt">
        <image class="banner-icon" src="../../assets/imgs/index/EYEGOOD.png"></image>
        <text>武汉艾格眼科医院</text>
      </view>
      <view class="banner-txt2">
        - WUHAN EYEGOOD OPHTHALMIC HOSPITAL -
      </view>
    </view>
  </view>
  <view class="login-wrap">
    <view class="input-wrap">
      <image src="../../assets/imgs/login/user.png"></image>
      <input type="text" placeholder-style="color:#a9a9a9;font-size:32rpx;" placeholder="输入您的用户名/手机号"/>
    </view>
    <view class="input-wrap">
      <image src="../../assets/imgs/login/pwd.png"></image>
      <input type="text" placeholder-style="color:#a9a9a9;font-size:32rpx;"
             placeholder="输入您的验证码"/>
      <view class="getCode" bindtap="getCode">
        <text wx:if="{{!second}}">获取验证码</text>
        <text wx:if="{{second}}">{{second}}</text>
      </view>
    </view>
    <view class="input-wrap">
      <image src="../../assets/imgs/login/reg.png"></image>
      <input type="text" placeholder-style="color:#a9a9a9;font-size:32rpx;" placeholder="输入您的推荐码"/>
    </view>
    <view class="login-btn">
注 册
    </view>
  </view>
  <view class="bg-xc">
    <image src="../../assets/imgs/reg-bg.png"></image>
  </view>
</view>
