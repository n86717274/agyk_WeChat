/* pages/orderDetail/orderDetail.wxss */
.content{
    margin: 44rpx 40rpx;
}
.field{
    margin-bottom: 28rpx;
    display: flex;
    align-items: center;
}
.label{
    margin-right: 16rpx;
    font-size: 28rpx;
    letter-spacing: -0.6rpx;
    color: #222222;
    min-width: 108rpx;
    text-align: right;
}
.inp{
    height: 69rpx;
    background-color: #ffffff;
    border-radius: 54rpx;
    border: solid 2rpx #e2e2e2;
    box-sizing: border-box;
    padding:0 25rpx;
    flex: 1 1 auto;
    font-size: 28rpx;
    letter-spacing: -0.6px;
    color: #999999;
}
.dfm {
    display: flex;
    align-items: center;
}
.btn{
    width: 591rpx;
    height: 80rpx;
    background-color: #1cdaea;
    border-radius: 50rpx;
    margin-left: 72rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 40rpx;
    letter-spacing: -0.8rpx;
    color: #ffffff;
}

/*弹窗*/
.mark{
    background-color: rgb(0, 0, 0);
    opacity: 0.502;
    position: absolute;
    left: -1px;
    top: -1px;
    width: 100vw;
    height: 100vh;
    z-index: 20;
}
.dialog{
    width: 488rpx;
    height: 416rpx;
    background-color: #ffffff;
    border-radius: 20rpx;
    position: absolute;
    z-index: 21;
    left: 50%;
    bottom: 251rpx;
    margin-left: -244rpx;
}
.dialog-top{
    height: 208rpx;
    position: relative;
}
.dialog-top .dialog-bg{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 208rpx;
}
.dialog-top .dialog-succ{
    position: absolute;
    left: 170rpx;
    top: 28rpx;
    width: 148rpx;
    height: 148rpx;
    opacity: 0.7;
}
.dialog-txt{
    font-size: 50rpx;
    line-height: 70rpx;
    text-align: center;
    margin-top: 28rpx;
    color: #555555;
}
.dialog-btn{
    width: 373rpx;
    height: 69rpx;
    background-color: #ffb400;
    border-radius: 34rpx;
    font-size: 30rpx;
    line-height: 70rpx;
    color: #ffffff;
    text-align: center;
    line-height: 69rpx;
    position: absolute;
    bottom: 20rpx;
    margin: 0 57rpx;
}
